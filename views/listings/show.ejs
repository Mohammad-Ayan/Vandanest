<% layout('layouts/boilerplate') %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-3 mb-3">
                <h2>
                    <%= listing.title %>
                </h2>
            </div>
            <div class="card col-6 offset-3 mb-3 show-card listing-card">
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">

                <div class="card-body">
                    <p class="card-text">
                        <i>Owned by: <%= listing.owner.username %></i>
                    </p>
                    <p class="card-text">
                        <%= listing.description %>
                    </p>
                    <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %> / night</p>
                    <p class="card-text"> Location: <%= listing.location %>
                    </p>
                    <p class="card-text"> Country: <%= listing.country %>
                    </p>
                </div>
            </div>

            <br>
            <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
                <div class="btns">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>

                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" style="display:inline;">
                        <button class="btn btn-dark offset-5 " type="submit"
                            onclick="return confirm('Are you sure you want to delete this listing?');">
                            Delete</button>
                    </form>
                </div>
                <% } %>


                    <div class="col-8 offset-3 mb-3">
                        <hr>
                        <% if(currUser && !currUser._id.equals(listing.owner._id)) { %>
                            <h4>Leave a Review</h4>
                            <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate
                                class="needs-validation">
                                <div class="mb-3 mt-3">
                                    <label for="rating" class="form-label"></label>
                                    <input type="range" min="1" max="5" id="rating" name="review[rating]"
                                        class="form-range">
                                </div>

                                <div class="mb-3 mt-3">
                                    <label for="comment" class="form-label">Comments</label>
                                    <textarea id="comment" name="review[comment]" rows="5" cols="20"
                                        class="form-control" required
                                        placeholder="Write your review here..."></textarea>
                                    <div class="invalid-feedback">Please add some comments for review</div>
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-outline-dark mt-2">Submit</button>
                                </div>
                            </form>
                            <hr>
                            <% } %>


                                <p><b>Reviews</b></p>
                                <div class="row">
                                    <% for(let review of listing.reviews){ %>
                                        <div class="card col-5 ms-3 mb-3 review-card">
                                            <div class="mt-2 card-body">
                                                <h6 class="ms-1 card-title"> @<%= review.author.username %></h6>
                                                <p class="mt-2 card-text">
                                                    <b>Comment:</b>
                                                    <%= review.comment %> <br>
                                                        <b>Rating:</b>
                                                        <%= review.rating %> stars
                                                </p>
                                            </div>
                                            <form class="mb-3 mt-2" method="POST"
                                                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                style="display:inline;">
                                                <button class="btn btn-sm btn-dark " type="submit"
                                                    onclick="return confirm('Are you sure you want to delete this review?');">
                                                    Delete Review</button>
                                            </form>
                                        </div>
                                        <% } %>

                                </div>
                    </div>
        </div>
    </body>

    </html>