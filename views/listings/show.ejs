<% layout('layouts/boilerplate') %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-3">
                <h2>Listing Details</h2>
            </div>
            <div class="card col-6 offset-3 mb-3 show-card">
                <img src="<%= listing.image.url %>>" class="card-img-top show-img" alt="lisitng_image">
                <div class="card-body">
                    <p class="card-text">
                        <b>
                            <%= listing.title %>
                        </b> <br />
                        <%= listing.description %> </b>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night <br>
                                Location: <%= listing.location %> <br>
                                    Country: <%= listing.country %>

                    </p>
                </div>
            </div>

            <br>
            <div class="btns">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
         
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" style="display:inline;">
                    <button class="btn btn-dark offset-5 " type="submit"
                        onclick="return confirm('Are you sure you want to delete this listing?');">
                        Delete</button>
                </form>
            </div>
        </div>
    </body>

    </html>