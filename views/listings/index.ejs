<% layout('layouts/boilerplate') %>

    <body>
        <h2>All Listings</h2>

        <div class="row row-cols-1 row-cols-lg-3 row-cols-md-3 row-cols-sm-1 g-4">
            <% for (let listing of allListings){ %>
                <div class="card" style="width: 20rem;">
                    <img src="<%= listing.image[0].url %>" class="card-img-top" alt="listing_image">
                    <div class="card-body">
                        <p class="card-text">
                            <%= listing.title %> <br>
                                &#8377; <%= listing.price.toLocaleString("en-IN") %> / night</li>
                        </p>
                    </div>
                </div>
                <% } %>
        </div>
    </body>

    </html>