<% layout('layouts/boilerplate') %>

    <body>
            <h2>All Listings</h2>

            <div class="row row-cols-1 row-cols-lg-3 row-cols-md-3 row-cols-sm-1 g-4">
                <% for (let listing of allListings){ %>
                    <a href="/listings/<%= listing._id %>" class="listing-link">
                        <div class="card col listing-card">
                            <img src="<%= listing.image?.url || 'https://images.unsplash.com/photo-1625505826533-5c80aca7d157?auto=format&fit=crop&w=800&q=60' %>"
                                class="card-img-top" alt="listing_image" style="height: 20rem" />


                            <div class="card-img-overlay"> </div>

                            <div class="card-body">
                                <p class="card-text">
                                    <b>
                                        <%= listing.title %> <br />
                                    </b>
                                    &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                                </p>
                            </div>
                        </div>
                    </a>
                    <% } %>
            </div>
    </body>

    </html>